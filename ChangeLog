	(WOL_MIN_PAYLOAD_SIZE, WOL_MIN_ETHER_RAW_SIZE, WOL_MIN_UDP_SIZE)
	(WOL_MIN_UDP_RAW_SIZE, VALIDATE_RESULTS_ADDRESS_DESCR_SIZE)
